{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"],
      "@ui/*": ["../../packages/ui"],
      "@ui": ["../../packages/ui/index.ts"],
      "@ui/lib/*": ["../../packages/ui/lib"],
      "@shared/*": ["../../packages/shared"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "test", "**/*spec.ts", "dist"]
}
