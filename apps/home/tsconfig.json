{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "tsconfig/astro.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "plugins": [
      {
        "name": "@astrojs/ts-plugin"
      }
    ]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.astro", "playwright.config.ts", "tests/**/*.ts"]
}
